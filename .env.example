# Flask Configuration
FLASK_ENV=development
SECRET_KEY=your-secret-key-here-change-in-production
DEBUG=True

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/
MONGODB_DB_NAME=inventory_management

# MongoDB Connection Pool Settings (for high concurrency)
MONGODB_MAX_POOL_SIZE=100
MONGODB_MIN_POOL_SIZE=10
MONGODB_TIMEOUT_MS=5000
MONGODB_CONNECT_TIMEOUT_MS=10000
MONGODB_SOCKET_TIMEOUT_MS=20000

# JWT Configuration
JWT_SECRET_KEY=your-jwt-secret-key-here-change-in-production
JWT_ACCESS_TOKEN_EXPIRES=3600

# Pagination
ITEMS_PER_PAGE=20

# Cache
CACHE_TIMEOUT=300

# Business Logic
ALLOW_NEGATIVE_STOCK=false

# Email Configuration
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=true
MAIL_USE_SSL=false
MAIL_USERNAME=your-email@example.com
MAIL_PASSWORD=your-email-password
MAIL_DEFAULT_SENDER=noreply@inventory.com

# OTP Settings
OTP_EXPIRY_MINUTES=10

# Session Security
SESSION_COOKIE_SECURE=false
SESSION_COOKIE_HTTPONLY=true
SESSION_COOKIE_SAMESITE=Lax

# Session Storage (for horizontal scaling)
# Use 'redis' for production with multiple instances, 'filesystem' for local dev
SESSION_TYPE=filesystem
# Redis URL (required if SESSION_TYPE=redis)
REDIS_URL=redis://localhost:6379/0
